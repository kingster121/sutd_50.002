testbench test_boolean {
    sig clk

    fun tick_clock() {
        clk = 1
        $silent_tick() // tick without capturing signals
        clk = 0
        $tick()
    }
    
    boolean bool_32_AND
    boolean bool_32_OR
    boolean bool_32_XOR
    boolean bool_32_A

    test myTest {
        clk = 0 // initialize the value
        $tick() // capture initial state

        // boolean a = all 1, b = all 0, AND
        bool_32_AND.a = 32hffffffff
        bool_32_AND.b = 32h00000000
        bool_32_AND.alufn_signal = 6b001000
        $print(bool_32_AND.bool)
        
        // boolean a = all 1, b = all 0, OR
        bool_32_OR.a = 32hfffffff0
        bool_32_OR.b = 32h00000000
        bool_32_OR.alufn_signal = 6b001110
        $print(bool_32_OR.bool)
        
        // boolean a = all 1, b = all 0, XOR
        bool_32_XOR.a = 32hfffffff0
        bool_32_XOR.b = 32h00000000
        bool_32_XOR.alufn_signal = 6b000110
        $print(bool_32_XOR.bool)
        
        // boolean a = 32hffff0000, b = all 0, BYPASS -> out = a
        bool_32_A.a = 32hffff0000
        bool_32_A.b = 32h00000000
        bool_32_A.alufn_signal = 6b001010
        $print(bool_32_A.bool)
    }
}